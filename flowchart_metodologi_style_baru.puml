@startuml
skinparam linestyle ortho
skinparam rectangle {
    BackgroundColor White
    BorderColor Black
    RoundCorner 0
    Shadowing false
}
skinparam database {
    BackgroundColor White
    BorderColor Black
    Shadowing false
}

' Definisi Node
database "Dataset\n(Kaggle Chest X-Ray)" as DB
rectangle "Pre-Processing\n(Resize 224x224, Normalisasi)" as Prep
rectangle "Data Augmentation\n(Overcoming Imbalance)" as Augment
rectangle "Train - Val - Test Split" as Split

rectangle "Deep Learning Model (Transfer Learning)" as ModelBox {
    rectangle "DenseNet121\n(Feature Extractor)" as DenseNet
    rectangle "Custom Head\n(GAP -> Dropout -> Sigmoid)" as Head
    DenseNet -right-> Head
}

rectangle "Model Evaluation\n- Confusion Matrix\n- Akurasi, Recall, Precision" as Eval
rectangle "Explainability\n(Grad-CAM Visualisasi)" as XAI

' Alur Panah
DB -right-> Prep
Prep -right-> Augment
Augment -right-> Split
Split -down-> ModelBox

ModelBox -left-> Eval
Eval -left-> XAI

@enduml
